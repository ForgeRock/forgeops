{
  "heap": [
    {
      "_comment": "This NO-OP filter is needed to expose PingGateway API while being in production mode",
      "name": "MyApiProtectionFilter",
      "type": "ScriptableFilter",
      "config": {
        "type": "application/x-groovy",
        "source": [
          "return next.handle(context, request)"
        ]
      }
    },
    {
      "name": "MyMetricsProtectionFilter",
      "type": "ScriptableFilter",
      "config": {
        "type": "application/x-groovy",
        "file": "BasicAuthResourceServerFilter.groovy",
        "args": {
          "realm": "/",
          "username": "metric",
          "password": "password"
        }
      }
    }    
  ],
  "mode": "PRODUCTION",
  "metricsProtectionFilter": "MyMetricsProtectionFilter",
  "apiProtectionFilter": "MyApiProtectionFilter"
}
